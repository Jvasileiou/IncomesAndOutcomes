<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView_Add"
        android:layout_width="63dp"
        android:layout_height="62dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="#494646"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/textView_NeaSunallagi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#494646"
        android:text="Νεα Συναλλαγη"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#7ec301"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_Add"
        app:layout_constraintEnd_toStartOf="@+id/imageView_Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView_Add" />

    <TextView
        android:id="@+id/textView_OpenCalendar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#494646"
        android:text="Ημερολογιο"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#7ec301"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_FirstArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="@+id/textView_OpenCalendar"
        app:layout_constraintEnd_toEndOf="@+id/textView_OpenCalendar"
        app:layout_constraintTop_toTopOf="@+id/textView_OpenCalendar"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/textView_MonthOfMain"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="#494646"
        android:gravity="center"
        android:text="Μηνας"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#cecece"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_OpenCalendar" />

    <ImageView
        android:id="@+id/imageView_FirstArrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="@+id/textView_MonthOfMain"
        app:layout_constraintStart_toStartOf="@+id/textView_MonthOfMain"
        app:layout_constraintTop_toTopOf="@+id/textView_MonthOfMain"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/textView_YearOfMain"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:background="#494646"
        android:gravity="center"
        android:text="Χρονος"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#cecece"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/textView_OpenCalendar" />

    <ImageView
        android:id="@+id/imageView_FirstArrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="8dp"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="@+id/textView_YearOfMain"
        app:layout_constraintEnd_toEndOf="@+id/textView_YearOfMain"
        app:layout_constraintTop_toTopOf="@+id/textView_YearOfMain"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <TextView
        android:id="@+id/textView_Incomes"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#494646"
        android:gravity="center"
        android:text="Εσοδα"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#5bef20"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/imageView_ee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_MonthOfMain" />

    <TextView
        android:id="@+id/textView_Outcomes"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:background="#494646"
        android:gravity="center"
        android:text="Εξοδα"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#f24949"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_ee"
        app:layout_constraintTop_toBottomOf="@+id/textView_YearOfMain" />

    <ImageView
        android:id="@+id/backOfPie"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView_Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Outcomes"
        app:srcCompat="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/textView_MsgNoData"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Δεν υπαρχουν δεδομενα.Διαλεξε μηνα και ετος απο το Ημερολογιο"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/backOfPie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_ee"
        app:layout_constraintVertical_bias="0.503" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ListView
        android:id="@+id/listViewEsoda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="@+id/backOfPie"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/backOfPie"
        app:layout_constraintTop_toTopOf="@+id/backOfPie" />

    <ListView
        android:id="@+id/listViewExoda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/darker_gray"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/backOfPie"
        app:layout_constraintEnd_toEndOf="@+id/backOfPie"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/backOfPie" />

    <ImageView
        android:id="@+id/imageView_ee"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_MonthOfMain"
        app:srcCompat="@drawable/ee" />

    <ImageView
        android:id="@+id/imageView_FirstArrow4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="@+id/textView_Incomes"
        app:layout_constraintStart_toStartOf="@+id/textView_Incomes"
        app:layout_constraintTop_toTopOf="@+id/backOfPie"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <ImageView
        android:id="@+id/imageView_FirstArrow5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:rotation="0"
        app:layout_constraintEnd_toEndOf="@+id/textView_Outcomes"
        app:layout_constraintStart_toStartOf="@+id/textView_Outcomes"
        app:layout_constraintTop_toTopOf="@+id/backOfPie"
        app:srcCompat="@android:drawable/arrow_down_float" />

</android.support.constraint.ConstraintLayout>